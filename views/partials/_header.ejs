<!-- _header.ejs partial, _ signifies this file is a partial -->
<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
        </li>
        <li>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </li>
      </ul>
      <% if (!user) { %>       
        <form class="form-inline my-2 my-lg-0" method="GET" action="/login">
          <button class="btn btn-primary mr-sm-2" type="submit">Login</button>
        </form>
        <form class="form-inline my-2 my-lg-0" method="GET" action="/register">
          <button class="btn btn-danger" type="submit">Register</button>
        </form>
      <% } else { %>
        <span class ="pr-4 nav-link">Logged in as: <%= user.email %>  </span>
        <form class="form-inline" style="margin-block-end: 0" method="POST" action="/logout"> 
          <button class="btn btn-danger my-2 my-sm-0">Logout</button>
        </form>
      <% } %>
    </div>
  </nav>
</header>